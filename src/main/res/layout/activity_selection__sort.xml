<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1">>

        <Button
            android:id="@+id/btnPlaySel"
            android:layout_width="263dp"
            android:layout_marginBottom="5sp"
            android:layout_height="wrap_content"
            android:text="Simulation"
            android:onClick="Simulation"/>
        <TextView
            android:id="@+id/Heading1Sel"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:textSize="24sp"
            android:textStyle="bold"
            android:text="Description"
            android:layout_marginBottom="5sp"/>


        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txDesSelect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/SelectDes"
                android:layout_marginBottom="5sp"/>

        </ScrollView>

        <TextView
            android:id="@+id/Heading2Sel"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:textSize="24sp"
            android:textStyle="bold"
            android:text="Complexity"
            android:layout_marginBottom="5sp"/>

        <TextView
            android:id="@+id/txComplexSel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/SelectCom"
            android:layout_marginBottom="5sp"/>/>

        <TextView
            android:id="@+id/Heading3Sel"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:textSize="24sp"
            android:textStyle="bold"
            android:text="Algorithm"
            android:layout_marginBottom="5sp"/>

        <ImageView
            android:id="@+id/btnSelection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/selection_sort" />

    </LinearLayout>
</ScrollView>

