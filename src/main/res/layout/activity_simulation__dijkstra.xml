<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:textAlignment="center"
        android:layout_margin="24dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/img1"
                android:src="@drawable/af"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@color/colorPrimary"
                android:id="@+id/tv1"
                android:text="5"
                android:textColor="@color/colorW"
                android:textAlignment="center"/>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="150dp"
                android:id="@+id/img2"
                android:src="@drawable/leftblack"/>
            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@color/colorPrimary"
                android:id="@+id/tv2"
                android:text="5"
                android:textColor="@color/colorW"
                android:textAlignment="center"
                android:layout_marginTop="15dp"/>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/img3"
                android:src="@drawable/rightblack"
                android:layout_marginLeft="30dp"/>
            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@color/colorPrimary"
                android:id="@+id/tv3"
                android:text="5"
                android:textColor="@color/colorW"
                android:textAlignment="center"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/img4"
                android:src="@drawable/af"
                android:layout_marginLeft="60dp"/>
            <ImageView
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:id="@+id/img5"
                android:src="@drawable/bl"
                android:layout_marginLeft="0dp"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/img6"
                android:src="@drawable/af"
                android:layout_marginLeft="0dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@color/colorPrimary"
                android:id="@+id/tv4"
                android:text="5"
                android:textColor="@color/colorW"
                android:textAlignment="center"/>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/img7"
                android:src="@drawable/leftblack"
                android:layout_marginLeft="0dp"/>
            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@color/colorPrimary"
                android:id="@+id/tv5"
                android:text="5"
                android:textColor="@color/colorW"
                android:textAlignment="center"
                android:layout_marginTop="30dp"/>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/img8"
                android:src="@drawable/rightblack"
                android:layout_marginLeft="0dp"/>
            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@color/colorPrimary"
                android:id="@+id/tv6"
                android:text="5"
                android:textColor="@color/colorW"
                android:textAlignment="center"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@color/colorPrimary"
                android:id="@+id/tv7"
                android:text="5"
                android:textColor="@color/colorW"
                android:textAlignment="center"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="10dp"/>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/img9"
                android:src="@drawable/leftblack"
                android:layout_marginLeft="0dp"/>
            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@color/colorPrimary"
                android:id="@+id/tv8"
                android:text="5"
                android:textColor="@color/colorW"
                android:textAlignment="center"
                android:layout_marginTop="30dp"/>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/img10"
                android:src="@drawable/rightblack"
                android:layout_marginLeft="0dp"/>
            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@color/colorPrimary"
                android:id="@+id/tv9"
                android:text="5"
                android:textColor="@color/colorW"
                android:textAlignment="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img11"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/af"
                android:layout_marginLeft="10dp"/>
            <ImageView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:id="@+id/img12"
                android:src="@drawable/bl"
                android:layout_marginLeft="0dp"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/img13"
                android:src="@drawable/af"
                android:layout_marginLeft="0dp"/>
            <ImageView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:id="@+id/img14"
                android:src="@drawable/bl"
                android:layout_marginLeft="0dp"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/img15"
                android:src="@drawable/af"
                android:layout_marginLeft="0dp"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btPause"
            android:layout_width="100dp"
            android:layout_height="@dimen/boxH"
            android:padding="@dimen/padding"
            android:text="pause"
            android:textSize="@dimen/texSiz" />
        <Button
            android:id="@+id/btReset"
            android:layout_width="100dp"
            android:layout_height="@dimen/boxH"
            android:padding="@dimen/padding"
            android:text="reset"
            android:textSize="@dimen/texSiz" />
    </LinearLayout>


    <!--
    <TextView
        android:layout_height="@dimen/TitleH"
        android:layout_width="match_parent"
