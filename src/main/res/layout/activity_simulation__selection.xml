    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin"
        android:layout_marginTop="1000000dp"
        android:paddingTop="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2000dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="@dimen/margin"
            >

            <TextView
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/boxH"
                android:layout_margin="@dimen/margin"
                android:padding="@dimen/padding"
                android:paddingTop="15dp"
                android:text="selectionSort(array, size)"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/texSiz" />
            <TextView
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/boxH"
                android:layout_margin="@dimen/margin"
                android:padding="@dimen/padding"
                android:text="for i = 0 to size - 1"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/texSiz" />
            <TextView
                android:id="@+id/line3"
                android:layout_height="@dimen/boxH"
                android:layout_width="match_parent"
                android:textSize="@dimen/texSiz"
                android:layout_margin="@dimen/margin"
                android:textColor="@color/colorPrimaryDark"
                android:text="minimum = i"
                android:paddingLeft="25dp"/>
            <TextView
                android:id="@+id/line4"
                android:layout_height="@dimen/boxH"
                android:layout_width="match_parent"
                android:textSize="@dimen/texSiz"
                android:layout_margin="@dimen/margin"
                android:textColor="@color/colorPrimaryDark"
                android:text="for j = i + 1 to size - 1"
                android:paddingLeft="50dp"/>
            <TextView
                android:id="@+id/line5"
                android:layout_height="@dimen/boxH"
                android:layout_width="match_parent"
                android:textSize="@dimen/texSiz"
                android:layout_margin="@dimen/margin"
                android:textColor="@color/colorPrimaryDark"
                android:text="if (array[minimum] > array[j])"
                android:paddingLeft="75dp"/>
            <TextView
                android:id="@+id/line6"
                android:layout_height="@dimen/boxH"
                android:layout_width="match_parent"
                android:textSize="@dimen/texSiz"
                android:layout_margin="@dimen/margin"
                android:textColor="@color/colorPrimaryDark"
                android:text="swap(array[minimum], array[j])"
                android:paddingLeft="50dp"/>
            <TextView
                android:id="@+id/line7"
                android:layout_height="@dimen/boxH"
                android:layout_width="match_parent"
                android:textSize="@dimen/texSiz"
                android:layout_margin="@dimen/margin"
                android:textColor="@color/colorPrimaryDark"
                android:text="end if"
                android:paddingLeft="50dp"/>
            <TextView
                android:id="@+id/line8"
                android:layout_height="@dimen/boxH"
                android:layout_width="match_parent"
                android:textSize="@dimen/texSiz"
                android:layout_margin="@dimen/margin"
                android:textColor="@color/colorPrimaryDark"
                android:text="end for"
                android:paddingLeft="25dp"/>
            <TextView
