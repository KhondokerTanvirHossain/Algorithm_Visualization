<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:textAlignment="center"
        android:layout_margin="24dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/img1"
                android:src="@drawable/af"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="150dp"
                android:id="@+id/img2"
                android:src="@drawable/leftblack"/>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/img3"
                android:src="@drawable/rightblack"
                android:layout_marginLeft="30dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/img4"
                android:src="@drawable/af"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/img5"
                android:src="@drawable/af"
                android:layout_marginLeft="130dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/img6"
                android:src="@drawable/leftblack"
                android:layout_marginLeft="20dp"/>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/img7"
                android:src="@drawable/rightblack"
                android:layout_marginLeft="10dp"/>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/img8"
                android:src="@drawable/leftblack"
                android:layout_marginLeft="50dp"/>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/img9"
                android:src="@drawable/rightblack"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img10"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/af"
                android:layout_marginLeft="10dp"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/img11"
                android:src="@drawable/af"
                android:layout_marginLeft="80dp"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/img12"
                android:src="@drawable/af"
                android:layout_marginLeft="20dp"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/img13"
                android:src="@drawable/af"
                android:layout_marginLeft="80dp"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btPause"
            android:layout_width="100dp"
            android:layout_height="@dimen/boxH"
            android:padding="@dimen/padding"
            android:text="pause"
            android:textSize="@dimen/texSiz" />
        <Button
            android:id="@+id/btReset"
            android:layout_width="100dp"
            android:layout_height="@dimen/boxH"
            android:padding="@dimen/padding"
            android:text="reset"
            android:textSize="@dimen/texSiz" />
    </LinearLayout>


    <!--
    <TextView
        android:layout_height="@dimen/TitleH"
        android:layout_width="match_parent"
        android:text="bubbleSort(array, size)"
        android:textColor="@color/colorB"
        android:textSize="@dimen/TitleSize"
        android:layout_margin="@dimen/margin"
        android:padding="@dimen/padding"

        />
       -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin"
        android:layout_marginTop="1000000dp"
        android:paddingTop="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2000dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="@dimen/margin"
            >

            <TextView
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/boxH"
                android:layout_margin="@dimen/margin"
                android:padding="@dimen/padding"
                android:paddingTop="15dp"
                android:text="bfs(int s)"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/texSiz" />
            <TextView
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/boxH"
                android:layout_margin="@dimen/margin"
                android:padding="@dimen/padding"
                android:text="queue.add(s)"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/texSiz" />
            <TextView
                android:id="@+id/line3"
                android:layout_height="@dimen/boxH"
                android:layout_width="match_parent"
                android:textSize="@dimen/texSiz"
                android:layout_margin="@dimen/margin"
                android:textColor="@color/colorPrimaryDark"
                android:text="distance[s] = 0"
                android:paddingLeft="0dp"/>
            <TextView
                android:id="@+id/line4"
                android:layout_height="@dimen/boxH"
                android:layout_width="match_parent"
                android:textSize="@dimen/texSiz"
                android:layout_margin="@dimen/margin"
                android:textColor="@color/colorPrimaryDark"
                android:text="while (queue is not empty)"
                android:paddingLeft="0dp"/>
            <TextView
                android:id="@+id/line5"
                android:layout_height="@dimen/boxH"
                android:layout_width="match_parent"
                android:textSize="@dimen/texSiz"
                android:layout_margin="@dimen/margin"
                android:textColor="@color/colorPrimaryDark"
                android:text="int u = top of the queue"
                android:paddingLeft="25dp"/>
            <TextView
                android:id="@+id/line6"
                android:layout_height="@dimen/boxH"
                android:layout_width="match_parent"
                android:textSize="@dimen/texSiz"
                android:layout_margin="@dimen/margin"
                android:textColor="@color/colorPrimaryDark"
                android:text="for each vertex v adjucent to u"
                android:paddingLeft="25dp"/>
            <TextView
                android:id="@+id/line7"
                android:layout_height="@dimen/boxH"
                android:layout_width="match_parent"
                android:textSize="@dimen/texSiz"
                android:layout_margin="@dimen/margin"
                android:textColor="@color/colorPrimaryDark"
                android:text="if v is not visited"
                android:paddingLeft="50dp"/>
            <TextView
                android:id="@+id/line8"
                android:layout_height="@dimen/boxH"
                android:layout_width="match_parent"
                android:textSize="@dimen/texSiz"
                android:layout_margin="@dimen/margin"
                android:textColor="@color/colorPrimaryDark"
                android:text="queue.add(v)"
                android:paddingLeft="75dp"/>
            <TextView
                android:id="@+id/line9"
                android:layout_height="@dimen/boxH"
                android:layout_width="match_parent"
                android:textSize="@dimen/texSiz"
                android:layout_margin="@dimen/margin"
                android:textColor="@color/colorPrimaryDark"
                android:text="distance[v] = distance[u] + 1"
                android:paddingLeft="75dp"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>