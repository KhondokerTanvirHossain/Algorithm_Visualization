    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin"
        android:layout_marginTop="1000000dp"
        android:paddingTop="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2000dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="@dimen/margin"
            >

            <TextView
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/boxH"
                android:layout_margin="@dimen/margin"
                android:padding="@dimen/padding"
                android:paddingTop="15dp"
                android:text="quickSort(array, p, r)"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/texSiz" />
            <TextView
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/boxH"
                android:layout_margin="@dimen/margin"
                android:padding="@dimen/padding"
                android:text="if r > p"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/texSiz" />
            <TextView
                android:id="@+id/line3"
                android:layout_height="@dimen/boxH"
                android:layout_width="match_parent"
                android:textSize="@dimen/texSiz"
                android:layout_margin="@dimen/margin"
                android:textColor="@color/colorPrimaryDark"
                android:text="q = partition(array, p, r)"
                android:paddingLeft="25dp"/>
            <TextView
                android:id="@+id/line4"
                android:layout_height="@dimen/boxH"
                android:layout_width="match_parent"
                android:textSize="@dimen/texSiz"
                android:layout_margin="@dimen/margin"
                android:textColor="@color/colorPrimaryDark"
                android:text="quickSort(array, p, q -1)"
                android:paddingLeft="25dp"/>
            <TextView
                android:id="@+id/line5"
                android:layout_height="@dimen/boxH"
                android:layout_width="match_parent"
                android:textSize="@dimen/texSiz"
                android:layout_margin="@dimen/margin"
                android:textColor="@color/colorPrimaryDark"
                android:text="quickSort(array, q + 1, r)"
                android:paddingLeft="25dp"/>
            <TextView
                android:id="@+id/line6"
                android:layout_height="@dimen/boxH"
                android:layout_width="match_parent"
                android:textSize="@dimen/texSiz"
                android:layout_margin="@dimen/margin"
                android:textColor="@color/colorPrimaryDark"
                android:text="endif" />
            <TextView
                android:id="@+id/line7"
                android:layout_height="@dimen/boxH"
                android:layout_width="match_parent"
                android:textSize="@dimen/texSiz"
                android:layout_margin="@dimen/margin"
                android:textColor="@color/colorPrimaryDark"
                android:text="partition(int[] array, int p, int r)" />
            <TextView
                android:id="@+id/line8"
                android:layout_height="@dimen/boxH"
                android:layout_width="match_parent"
                android:textSize="@dimen/texSiz"
                android:layout_margin="@dimen/margin"
                android:textColor="@color/colorPrimaryDark"
                android:text="x = array[r]" />
            <TextView
                android:id="@+id/line9"
                android:layout_height="@dimen/boxH"
                android:layout_width="match_parent"
                android:textSize="@dimen/texSiz"
                android:layout_margin="@dimen/margin"
                android:textColor="@color/colorPrimaryDark"
                android:text="i = p - 1" />
            <TextView
                android:id="@+id/line10"
                android:layout_height="@dimen/boxH"
                android:layout_width="match_parent"
                android:textSize="@dimen/texSiz"
                android:layout_margin="@dimen/margin"
                android:textColor="@color/colorPrimaryDark"
                android:text="for j = p to r - 1" />
            <TextView
                android:id="@+id/line11"
                android:layout_height="@dimen/boxH"
                android:layout_width="match_parent"
                android:textSize="@dimen/texSiz"
                android:layout_margin="@dimen/margin"
                android:textColor="@color/colorPrimaryDark"
                android:text="if (x >= array[j])"
                android:paddingLeft="25dp" />
            <TextView
                android:id="@+id/line12"
                android:layout_height="@dimen/boxH"
                android:layout_width="match_parent"
                android:textSize="@dimen/texSiz"
                android:layout_margin="@dimen/margin"
                android:textColor="@color/colorPrimaryDark"
                android:text="i++"
                android:paddingLeft="50dp" />
            <TextView
                android:id="@+id/line13"
                android:layout_height="@dimen/boxH"
                android:layout_width="match_parent"
                android:textSize="@dimen/texSiz"
                android:layout_margin="@dimen/margin"
                android:textColor="@color/colorPrimaryDark"
                android:text="swap (array[i], array[j])"
                android:paddingLeft="50dp" />
            <TextView
                android:id="@+id/line14"
                android:layout_height="@dimen/boxH"
                android:layout_width="match_parent"
                android:textSize="@dimen/texSiz"
                android:layout_margin="@dimen/margin"
                android:textColor="@color/colorPrimaryDark"
                android:text="endif"
                android:paddingLeft="25dp" />
            <TextView
                android:id="@+id/line15"
                android:layout_height="@dimen/boxH"
                android:layout_width="match_parent"
                android:textSize="@dimen/texSiz"
                android:layout_margin="@dimen/margin"
                android:textColor="@color/colorPrimaryDark"
                android:text="swap(array[i + 1], array[r]"
                android:paddingLeft="25dp" />
            <TextView
                android:id="@+id/line16"
                android:layout_height="@dimen/boxH"
                android:layout_width="match_parent"
                android:textSize="@dimen/texSiz"
                android:layout_margin="@dimen/margin"
                android:textColor="@color/colorPrimaryDark"
                android:text="endfor" />
            <TextView
                android:id="@+id/line17"
                android:layout_height="@dimen/boxH"
                android:layout_width="match_parent"
                android:textSize="@dimen/texSiz"
                android:layout_margin="@dimen/margin"
                android:textColor="@color/colorPrimaryDark"
                android:text="return i + 1" />
        </LinearLayout>
    </ScrollView>

