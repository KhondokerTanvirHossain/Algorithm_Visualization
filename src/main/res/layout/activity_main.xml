

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">>


            <TextView
                android:layout_width="237dp"
                android:layout_height="28dp"
                android:text="Sorting Algorithms"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnBubble"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bubble Sort"
                android:onClick="Bubble"/>


            <Button
                android:id="@+id/btnSelection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Selection Sort"
                android:onClick="Select"/>


            <Button
                android:id="@+id/btnInsertion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Insertion Sort"
                android:onClick="Insertion"/>

            <Button
                android:id="@+id/btnHeap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Heap Sort"
                android:onClick="Heap"/>

            <Button
                android:id="@+id/btnMerge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Merge Sort"
                android:onClick="Merge"/>

            <Button
                android:id="@+id/btnQuick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quick Sort"
                android:onClick="Quick"/>

            <TextView
                android:layout_width="237dp"
                android:layout_height="25dp"
                android:text="List Search"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnLinear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Linear Search"
                android:onClick="Linear_Search"/>


            <Button
                android:id="@+id/btnBinary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Binary Search"
                android:onClick="Binary_Search"/>


                <TextView
                    android:text="Graph Search"
                    android:layout_width="237dp"
                    android:layout_height="25dp"
                    android:textSize="24sp"
                    android:textStyle="bold"/>

            <Button
                android:id="@+id/btnBFS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Breath-First Search"
                android:onClick="BFS"/>

            <Button
                android:id="@+id/btnDFS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Depth-First Search"
                android:onClick="DFS"/>

            <Button
                android:id="@+id/btnDijkstra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dijkstra's Algorithm"
                android:onClick="Dikstra"/>



                <TextView
                    android:text="Recursion"
                    android:layout_width="237dp"
                    android:layout_height="25dp"
                    android:textSize="24sp"
                    android:textStyle="bold"/>



                <Button
                    android:id="@+id/btnRecursion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tower of Hanoi"
                    android:onClick="ToH"/>


        </LinearLayout>



    </ScrollView>
